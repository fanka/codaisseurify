<%= form_for @song do |f| %>
  <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name of your song", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Lyrics</label>
    <%= f.text_area :lyrics, rows: 20, placeholder: "Paste here lyrics of the song", class: "form-control" %>
  </div>



  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<%end%>

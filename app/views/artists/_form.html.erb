<%= form_for @artist do |f| %>
  <ul>
    <% @artist.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name of the artist", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Link to image</label>
    <%= f.text_field :image_url, placeholder: "Paste a link to the image", class: "form-control" %>
  </div>



  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<%end%>

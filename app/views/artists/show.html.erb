<h1><%= @artist.name %> </h1>

<%= image_tag @artist.image_url %>
<h2>List of songs</h2>
<p><% @artist.songs.each do |song| %>
  <%= link_to song.name, song_path(song) %> </p>
<% end %>
<p><%= link_to "[Add a new song]", new_song_path%></p>
<br>
<%= link_to "[Edit]", edit_artist_path(@artist.id) %>
<%= link_to "[Delete]", artist_path(@artist.id),
method: :delete, data: { confirm: "Are you sure you want to delete this artist?" } %>

<table>
<tr><h1><%= @artist.name %> </h1></tr>

<tr>
<td><%= image_tag @artist.image_url %></td>
<td><h2>List of songs</h2>
<%= render 'songs/songs_list' %>
<p><%= link_to "[New Song]", new_artist_song_path(@artist, @song), remote: true, class: "new-song-button" %></p>
<p><%= link_to "Delete all", songs_remove_all_path(song_ids: @artist.songs.ids), remote: true, method: :delete, data: { confirm: "Are you sure?" } %>
</td>

<br>
</tr>
</table>
<div class="edit-and-delete-links">
<%= link_to "[Edit artist]", edit_artist_path(@artist.id) %>
<%= link_to "[Delete artist]", artist_path(@artist.id),
method: :delete, data: { confirm: "Are you sure you want to delete this artist?" } %>
<p><%= link_to "[Back to All Artists]", root_path %></p>
</div>

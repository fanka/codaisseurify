<h1><%= @artist.name %> </h1>

<%= image_tag @artist.image_url %>
<h2>List of songs</h2>
<p><% @artist.songs.each do |song| %>
  <%= link_to song.name, artist_song_path(@artist, song) %> </p>
<% end %>
<p><%= link_to "[Add a new song]", new_artist_song_path(@artist,@song)%></p>
<br>
<%= link_to "[Edit artist]", edit_artist_path(@artist.id) %>
<%= link_to "[Delete artist]", artist_path(@artist.id),
method: :delete, data: { confirm: "Are you sure you want to delete this artist?" } %>
